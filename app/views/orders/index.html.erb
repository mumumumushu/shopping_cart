<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order Name</th>
      <th>Last Edited</th>
      <th>Sum Pirce</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_name %></td>
        <td><%= order.order_created_at %></td>
        <td><%= order.sum_price %></td>
        <td><%= link_to 'Show', order %></td>
        
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

