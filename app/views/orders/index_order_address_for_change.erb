
<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      
      <th>Consignee_name</th>
      <th>Consignee_address</th>
      <th>used?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
       
        <td><%= address.consignee_name %></td>
        <td><%= address.consignee_address %></td>
        <td>
          <% if address.id == 
            @order.order_address_id %>
          			using
          <% end %>

        </td>
        <td>
       
        
		       	<%= link_to 'Use this one',  change_order_address_order_path(@order,
		       		:changed_address_id => "#{address.id}"), 
		        	method: :post  %>
        		
      	</td>




      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Edit my addresses', addresses_path %></br>
<%= link_to 'Back to order', order_path(@order) %>
